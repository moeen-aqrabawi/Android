<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/com_facebook_loginview_default_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context=".MainFragment">

    <ImageView
        android:id="@+id/icw_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@drawable/icw_logo" />

    <TextView
        android:id="@+id/icwtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icw_logo"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:shadowColor="#000000"
        android:text="@string/ICW_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFA500"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/mac_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:src="@drawable/mac_logo" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
       />

    <Button
    android:id="@+id/main_menu"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textColor="#FFA500"
        android:textSize="20dp"
style="@style/com_facebook_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_button"
        android:onClick="mainManuHandler"/>


    <LinearLayout
        android:id="@+id/m_views"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context=".MainPage">

        <TextView
            android:id="@+id/m_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="left"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/m_gender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="left"
            android:text="Gender"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/m_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="left"
            android:text="Location"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>


</RelativeLayout>
